{
    "openapi": "3.0.0",
    "info": {
        "title": "Party-Controll-API",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3222/api"
        }
    ],
    "paths": {
        "/user/register": {
            "post": {
                "summary": "Registrar um novo usuário",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email"
                                    },
                                    "password": {
                                        "type": "string"
                                    },
                                    "name": {
                                        "type": "string"
                                    }
                                },
                                "required": ["email", "password", "name"]
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Usuário criado com sucesso"
                    },
                    "400": {
                        "description": "Erro na solicitação"
                    }
                }
            }
        },
        "/user/login": {
            "post": {
                "summary": "Conectar um usuário",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                },
                                "required": ["email", "password"]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Usuário conectado com sucesso"
                    },
                    "401": {
                        "description": "Credenciais inválidas"
                    }
                }
            }
        },
        "/user": {
            "get": {
                "summary": "Obter todos os usuários",
                "responses": {
                    "200": {
                        "description": "Lista de usuários"
                    }
                }
            }
        },
        "/user/{userId}": {
            "get": {
                "summary": "Obter um usuário específico por ID",
                "parameters": [
                    {
                        "name": "userId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Informações do usuário"
                    },
                    "404": {
                        "description": "Usuário não encontrado"
                    }
                }
            }
        },
        "/permission": {
            "post": {
                "summary": "Criar uma permissão",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email"
                                    },
                                    "job": {
                                        "type": "string"
                                    }
                                },
                                "required": ["email", "job"]
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Permissão criada com sucesso"
                    },
                    "400": {
                        "description": "Erro na solicitação"
                    }
                }
            },
            "get": {
                "summary": "Obter todas as permissões",
                "responses": {
                    "200": {
                        "description": "Lista de permissões"
                    }
                }
            },
            "delete": {
                "summary": "Excluir uma permissão",
                "responses": {
                    "204": {
                        "description": "Permissão excluída com sucesso"
                    },
                    "404": {
                        "description": "Permissão não encontrada"
                    }
                }
            }
        },
        "/permission/{permissionId}": {
            "get": {
                "summary": "Obter uma permissão específica por ID",
                "parameters": [
                    {
                        "name": "permissionId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Informações da permissão"
                    },
                    "404": {
                        "description": "Permissão não encontrada"
                    }
                }
            },
            "patch": {
                "summary": "Atualizar uma permissão",
                "parameters": [
                    {
                        "name": "permissionId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email"
                                    },
                                    "job": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Permissão atualizada com sucesso"
                    },
                    "400": {
                        "description": "Erro na solicitação"
                    },
                    "404": {
                        "description": "Permissão não encontrada"
                    }
                }
            }
        },
        "/party": {
            "post": {
                "summary": "Criar uma festa",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "condominum": {
                                        "type": "string"
                                    },
                                    "apt": {
                                        "type": "string"
                                    },
                                    "start": {
                                        "type": "string",
                                        "format": "date-time"
                                    },
                                    "end": {
                                        "type": "string",
                                        "format": "date-time"
                                    }
                                },
                                "required": ["condominum", "apt", "start", "end"]
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Festa criada com sucesso"
                    },
                    "400": {
                        "description": "Erro na solicitação"
                    }
                }
            }
        },
        "/party/{partyId}": {
            "get": {
                "summary": "Encontrar uma festa específica por ID",
                "parameters": [
                    {
                        "name": "partyId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Informações da festa"
                    },
                    "404": {
                        "description": "Festa não encontrada"
                    }
                }
            },
            "delete": {
                "summary": "Excluir uma festa",
                "parameters": [
                    {
                        "name": "partyId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Festa excluída com sucesso"
                    },
                    "404": {
                        "description": "Festa não encontrada"
                    }
                }
            }
        },
        "/partys": {
            "post": {
                "summary": "Obter todas as festas a partir de uma data de início",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "start": {
                                        "type": "string",
                                        "format": "date-time"
                                    }
                                },
                                "required": ["start"]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Lista de festas"
                    },
                    "400": {
                        "description": "Erro na solicitação"
                    }
                }
            }
        }
    }
}
